.container.newsfeeds
  - if (user.logged())
    .row
      article.col-xs-12.col-md-8.col-md-offset-2.newsfeed.start
        .profile.pull-left
          img(src=user.gravatar)
        a.name.pull-left(href='#') #{user.firstName} #{user.lastName}
        - if (deployment)
          a.go-to-deployment.pull-right.glyphicon.glyphicon-share-alt(href=window.location.protocol + '//' + deployment.url, target='_blank') #{deployment.title}
        - else
          a.btn.purple.pull-right(href='/deployments/new')=t('feed.call-to-action.start-a-democracy')
  .feeds
